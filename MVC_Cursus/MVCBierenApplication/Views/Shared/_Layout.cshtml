<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <img src="~/Images/biertempel.png" alt="logo"/>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @if (ViewBag.Adres != null)
            {
            <p>- @ViewBag.Adres.Naam - @ViewBag.Adres.Straat @ViewBag.Adres.HuisNr - @ViewBag.Adres.PostCode @ViewBag.Adres.Gemeente - tel. @ViewBag.Adres.TelefoonNr - email: @ViewBag.Adres.EMail -</p>
            }
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
