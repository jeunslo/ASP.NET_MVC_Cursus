@using MVC_Test.Models
@model List<Film>
@{
    ViewBag.Title = "WinkelMandje";
}
<script>
    $("#divAfrekenenToReload").load(location.href + " #divAfrekenenToReload>*", "");
</script>
<h2>WinkelMandje</h2>

@if (Model.Count > 0)
{
    <table class="table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Titel
                </th>
                <th>
                    Prijs
                </th>
                <th>
                    Verwijderen
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(x => item.Titel)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Prijs)
                    </td>
                    <td>
                        <a name="verwijderen">
                            @Ajax.ActionLink("Verwijderen", "VerwijderFilmBevestiging", new { bandNr = item.BandNr },
                                          new AjaxOptions { UpdateTargetId = "lijstOfVerwijderen", Url = Url.Action("VerwijderFilmBevestiging", new { bandNr = item.BandNr }) })
                                            </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<u>@Html.ActionLink("Verder winkelen", "GenreView")</u>
